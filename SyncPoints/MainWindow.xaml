<Window x:Class="SyncPoints.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SyncPoints"
        xmlns:locallib="clr-namespace:SyncPointsLib;assembly=SyncPointsLib"
        xmlns:graphxctrl="clr-namespace:GraphX.Controls;assembly=GraphX.WPF.Controls"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        ui:ThemeManager.RequestedTheme="Light"
        ui:TitleBar.Background="RoyalBlue"
        ui:TitleBar.Foreground="White"
        Title="SyncPoints" ui:TitleBar.IsBackEnabled="True" Height="700" Width="1200" MinHeight="700" MinWidth="1010" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="graphxctrl:ZoomControl" x:Key="zoomSlider">
            <Style.Resources>
                <Style TargetType="Slider" >
                    <Setter Property="Background" Value="Transparent"/>
                </Style>
            </Style.Resources>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Yu Gothic UI"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <graphxctrl:ZoomControl x:Name="zoomcontrol" Grid.Row="1" Grid.Column="2" BorderThickness="3" BorderBrush="RoyalBlue"
                                MaxZoom="2.5" MinZoom="0.2" Style="{StaticResource zoomSlider}">
            <Canvas x:Name="mainPanel" IsHitTestVisible="False" Height="1000" Width="1000">
                <locallib:MyGraphArea x:Name="graphArea"/>
            </Canvas>
        </graphxctrl:ZoomControl>
        <StackPanel Orientation="Horizontal" Grid.Column="2" HorizontalAlignment="Center">
            <StackPanel.Resources>
                <Style TargetType="{x:Type StackPanel}">
                    <Setter Property="Margin" Value="10,0,0,0"/>
                </Style>
            </StackPanel.Resources>
            <Button x:Name="resumeButton" Click="resumeButton_Click"  Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}" Foreground="White" Background="RoyalBlue"
                    VerticalAlignment="Stretch" Margin="5">
                <Grid Width="{Binding ElementName=resumeButton, Path=ActualHeight}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="-6"
                         Height="{Binding ElementName=resumeButton, Path=ActualHeight}">
                    <Path Data="M8,5.14V19.14L19,12.14L8,5.14Z" Fill="White" Stretch="Uniform" Margin="6"/>
                </Grid>
            </Button>
            <Button x:Name="pauseButton" Click="pauseButton_Click"  Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}" Foreground="White" Background="RoyalBlue"
                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5">
                <Grid Width="{Binding ElementName=resumeButton, Path=ActualHeight}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-6"
                         Height="{Binding ElementName=resumeButton, Path=ActualHeight}">
                    <Path Data="M14,19H18V5H14M6,19H10V5H6V19Z" Fill="White" Stretch="Uniform" Margin="6"/>
                </Grid>
            </Button>
            <StackPanel>
                <TextBlock HorizontalAlignment="Center" FontSize="13" FontWeight="SemiBold" Foreground="RoyalBlue" FontFamily="Yu Gothic UI" Text="{Binding AnimationSpeedText}" />
                <Slider x:Name="speedSlider" VerticalAlignment="Center" Width="150" Style="{StaticResource DefaultSliderStyle}" TickPlacement="Both" MinHeight="50"
                         Minimum="-5" Maximum="5" ValueChanged="speedSlider_ValueChanged" Value="{Binding AnimationSpeed}" IsMoveToPointEnabled="True"/>
            </StackPanel>
        </StackPanel>
        <TextBlock Grid.Column="1" x:Name="createGraph" FontFamily="Yu Gothic UI" FontSize="35" FontWeight="DemiBold" TextWrapping="Wrap"
                   HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="RoyalBlue">Generate a graph</TextBlock>
        <Button x:Name="TestDot" Click="TestDot_Click"/>
        <Grid Grid.Row="1" Grid.Column="1" x:Name="graphGenPanel" Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.25*"/>
                    <RowDefinition Height="0.25*"/>
                    <RowDefinition Height="0.3*"/>
                </Grid.RowDefinitions>
                <TextBlock VerticalAlignment="Bottom" Grid.ColumnSpan="3" Grid.Row="0" FontFamily="Yu Gothic UI" FontSize="20" FontWeight="DemiBold"
                   HorizontalAlignment="Left"  Foreground="RoyalBlue" >Number of vertices:</TextBlock>
                <TextBlock VerticalAlignment="Top" Grid.ColumnSpan="3" Grid.Row="1" FontFamily="Yu Gothic UI" FontSize="12" FontStyle="Italic"
                   HorizontalAlignment="Left" TextWrapping="Wrap" Foreground="DarkGray">How many vertices will the program generate</TextBlock>
                <TextBox VerticalAlignment="Center" Grid.ColumnSpan="3" Grid.Row="2" MaxLength="5" BorderBrush="RoyalBlue" GotFocus="TextBox_LostFocus"
                    Height="30" Margin="0,0,0,0" Text="{Binding GraphGenParams.VertexCount, Mode=TwoWay}" TextChanged="CheckGenButton" LostFocus="TextBox_LostFocus"/>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.25*"/>
                    <RowDefinition Height="0.25*"/>
                    <RowDefinition Height="0.3*"/>
                </Grid.RowDefinitions>
                <TextBlock VerticalAlignment="Bottom" Grid.ColumnSpan="3" Grid.Row="0" FontFamily="Yu Gothic UI" FontSize="20" FontWeight="DemiBold"
                   HorizontalAlignment="Left"  Foreground="RoyalBlue" >Edge probability:</TextBlock>
                <TextBlock VerticalAlignment="Top" Grid.ColumnSpan="3" Grid.Row="1" FontFamily="Yu Gothic UI" FontSize="12" FontStyle="Italic"
                   HorizontalAlignment="Left" TextWrapping="Wrap"  Foreground="DarkGray">The probability that an edge will be generated from each vertex to all others</TextBlock>
                <TextBox VerticalAlignment="Center" Grid.ColumnSpan="3" Grid.Row="2" MaxLength="5" BorderBrush="RoyalBlue" GotFocus="TextBox_LostFocus"
                   Height="30" Margin="0,0,0,0" Text="{Binding GraphGenParams.EdgeProbability, Mode=TwoWay}" TextChanged="CheckGenButton" LostFocus="TextBox_LostFocus"/>
            </Grid>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.25*"/>
                    <RowDefinition Height="0.25*"/>
                    <RowDefinition Height="0.3*"/>
                </Grid.RowDefinitions>
                <TextBlock VerticalAlignment="Bottom" Grid.ColumnSpan="3" Grid.Row="0" FontFamily="Yu Gothic UI" FontSize="20" FontWeight="DemiBold"
                   HorizontalAlignment="Left"  Foreground="RoyalBlue" >Starting edge probability:</TextBlock>
                <TextBlock VerticalAlignment="Top" Grid.ColumnSpan="3" Grid.Row="1" FontFamily="Yu Gothic UI" FontSize="12" FontStyle="Italic"
                   HorizontalAlignment="Left" TextWrapping="Wrap"  Foreground="DarkGray">The probability that an edge will contain a point at the beginning</TextBlock>
                <TextBox VerticalAlignment="Center" Grid.ColumnSpan="3" Grid.Row="2" MaxLength="5" BorderBrush="RoyalBlue" GotFocus="TextBox_LostFocus"
                    Height="30" Margin="0,0,0,0" Text="{Binding GraphGenParams.StartingEdgeProbability, Mode=TwoWay}"  TextChanged="CheckGenButton" LostFocus="TextBox_LostFocus"/>
            </Grid>
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.25*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.1*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.2*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.25*"/>
                    <RowDefinition Height="0.25*"/>
                    <RowDefinition Height="0.3*"/>
                </Grid.RowDefinitions>
                <TextBlock VerticalAlignment="Bottom" Grid.ColumnSpan="4" Grid.Row="0" FontFamily="Yu Gothic UI" FontSize="20" FontWeight="DemiBold"
                   HorizontalAlignment="Left"  Foreground="RoyalBlue" >Synchronization number bounds:</TextBlock>
                <TextBlock VerticalAlignment="Center"  Grid.Row="2" Grid.Column="0" FontFamily="Yu Gothic UI" FontSize="15" FontWeight="DemiBold"
                   HorizontalAlignment="Center"  Foreground="RoyalBlue" >from</TextBlock>
                <TextBlock VerticalAlignment="Center"  Grid.Row="2" Grid.Column="2" FontFamily="Yu Gothic UI" FontSize="15" FontWeight="DemiBold"
                   HorizontalAlignment="Center"  Foreground="RoyalBlue" >to</TextBlock>
                <TextBlock VerticalAlignment="Top" Grid.ColumnSpan="4" Grid.Row="1" FontFamily="Yu Gothic UI" FontSize="12" FontStyle="Italic"
                   HorizontalAlignment="Left" TextWrapping="Wrap"  Foreground="DarkGray">The lower and upper bound of random synchronization number generation</TextBlock>
                <TextBox VerticalAlignment="Center" Grid.Column="1" Grid.Row="2" MaxLength="5" BorderBrush="RoyalBlue" GotFocus="TextBox_LostFocus"
                    Height="30" Margin="10,0,10,0" Text="{Binding GraphGenParams.SyncLowerBound, Mode=TwoWay}" TextChanged="CheckGenButton" LostFocus="TextBox_LostFocus"/>
                <TextBox VerticalAlignment="Center" Grid.Column="3" Grid.Row="2" MaxLength="5" BorderBrush="RoyalBlue" GotFocus="TextBox_LostFocus"
                    Height="30" Margin="10,0,10,0" Text="{Binding GraphGenParams.SyncUpperBound, Mode=TwoWay}" TextChanged="CheckGenButton" LostFocus="TextBox_LostFocus"/>
            </Grid>
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.25*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.1*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.2*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.25*"/>
                    <RowDefinition Height="0.25*"/>
                    <RowDefinition Height="0.3*"/>
                </Grid.RowDefinitions>
                <TextBlock VerticalAlignment="Bottom" Grid.ColumnSpan="4" Grid.Row="0" FontFamily="Yu Gothic UI" FontSize="20" FontWeight="DemiBold"
                   HorizontalAlignment="Left"  Foreground="RoyalBlue" >Edge weight bounds:</TextBlock>
                <TextBlock VerticalAlignment="Center"  Grid.Row="2" Grid.Column="0" FontFamily="Yu Gothic UI" FontSize="15" FontWeight="DemiBold"
                   HorizontalAlignment="Center"  Foreground="RoyalBlue" >from</TextBlock>
                <TextBlock VerticalAlignment="Center"  Grid.Row="2" Grid.Column="2" FontFamily="Yu Gothic UI" FontSize="15" FontWeight="DemiBold"
                   HorizontalAlignment="Center"  Foreground="RoyalBlue" >to</TextBlock>
                <TextBlock VerticalAlignment="Top" Grid.ColumnSpan="4" Grid.Row="1" FontFamily="Yu Gothic UI" FontSize="12" FontStyle="Italic"
                   HorizontalAlignment="Left" TextWrapping="Wrap"  Foreground="DarkGray">The lower and upper bound of random edge weight generation</TextBlock>
                <TextBox VerticalAlignment="Center" Grid.Column="1" Grid.Row="2" MaxLength="5" BorderBrush="RoyalBlue" GotFocus="TextBox_LostFocus"
                    Height="30" Margin="10,0,10,0" Text="{Binding GraphGenParams.WeightLowerBound, Mode=TwoWay}" TextChanged="CheckGenButton" LostFocus="TextBox_LostFocus"/>
                <TextBox VerticalAlignment="Center" Grid.Column="3" Grid.Row="2" MaxLength="5" BorderBrush="RoyalBlue" GotFocus="TextBox_LostFocus"
                    Height="30" Margin="10,0,10,0" Text="{Binding GraphGenParams.WeightUpperBound, Mode=TwoWay}" TextChanged="CheckGenButton" LostFocus="TextBox_LostFocus"/>
            </Grid>
            <TextBlock Grid.Row="5" x:Name="WrongParams" VerticalAlignment="Top" HorizontalAlignment="Center" Foreground="Red" Margin="0,5,0,50" TextWrapping="Wrap"/>
            <Button Grid.Row="5" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" FontSize="25"  x:Name="GenerateGraphButton" Click="GenerateGraphButton_Click"
                    FontWeight="DemiBold" Foreground="White" Background="RoyalBlue" BorderThickness="2">Generate</Button>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="1" x:Name="graphStatPanel" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="0.4*"/>
                <RowDefinition Height="0.4*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>
            <TextBlock FontFamily="Yu Gothic UI" FontSize="30" FontWeight="DemiBold" TextWrapping="Wrap"
                   HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="RoyalBlue">Parameters:</TextBlock>
            <CheckBox Grid.Row="1" HorizontalAlignment="Center" IsChecked="{Binding UseSandpileModel}" FontSize="15" Foreground="RoyalBlue" Content="Use sandpile model" FontFamily="Yu Gothic UI" FontWeight="DemiBold" IsEnabled="{Binding AnimNotStarted}"/>
            <CheckBox Grid.Row="2" HorizontalAlignment="Center" IsChecked="{Binding DisableDots}" FontSize="15" Foreground="RoyalBlue" Content="Disable point animations to save performance" FontFamily="Yu Gothic UI" FontWeight="DemiBold" IsEnabled="{Binding AnimNotStarted}"/>
            <Button Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center" Width="250" FontSize="30"  x:Name="StartStopButton" Click="StartStopButton_Click"
                    FontWeight="DemiBold" Foreground="White" Background="RoyalBlue" BorderThickness="2">Start</Button>
            <Grid Grid.Row="4" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="0.7*"/>
                    <RowDefinition Height="0.7*"/>
                    <RowDefinition Height="0.7*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Foreground="RoyalBlue" FontSize="30" FontWeight="DemiBold" HorizontalAlignment="Center">Statistics:</TextBlock>
                <TextBlock Foreground="RoyalBlue" FontSize="20" FontWeight="DemiBold" Grid.Row="1">
                    <Run Text="Total points created: "/>
                    <Run Text="{Binding Stats.DotCount, Mode=TwoWay}"/>
                </TextBlock>
                <TextBlock Foreground="RoyalBlue" FontSize="20" FontWeight="DemiBold" Grid.Row="2">
                        <Run Text="Active points: "/>
                        <Run Text="{Binding Stats.CurrentDotCount, Mode=TwoWay}"/>
                </TextBlock>
                <Button x:Name="chartButton" Click="chartButton_Click" Grid.Row="2"  Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}" Foreground="White" Background="RoyalBlue"
                    HorizontalAlignment="Right" VerticalAlignment="Stretch" Margin="5">
                    <Grid Width="{Binding ElementName=chartButton, Path=ActualHeight}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-6"
                         Height="{Binding ElementName=chartButton, Path=ActualHeight}">
                        <Path Data="M4 19V20H22V22H2V2H4V17C7 17 10 15 12.1 11.4C15.1 6.4 18.4 4 22 4V6C19.2 6 16.5 8.1 13.9 12.5C11.3 16.6 7.7 19 4 19Z" Fill="White" Stretch="Uniform" Margin="6"/>
                    </Grid>
                </Button>
                <TextBlock Foreground="RoyalBlue" FontSize="20" FontWeight="DemiBold" Grid.Row="3">
                        <Run Text="Total distance travelled: "/>
                        <Run Text="{Binding Stats.DistanceTravelled, Mode=TwoWay, StringFormat=F4}"/>
                </TextBlock>
                <TextBlock Foreground="RoyalBlue" FontSize="20" FontWeight="DemiBold" Grid.Row="4" TextWrapping="Wrap" Name="statMessage" HorizontalAlignment="Left" >
                        <Run Text="" x:Name="statMessage1"/>
                        <Run Text="" Foreground="Purple" x:Name="statMessagePurple"/>
                </TextBlock>
                <StackPanel Grid.Row="5" Orientation="Horizontal" >
                    <Button x:Name="viewVertexStats" Click="viewVertexStats_Click" Height="45"   Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}" Foreground="White" Background="RoyalBlue"
                    HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="5">
                        <Grid Width="{Binding ElementName=viewVertexStats, Path=ActualHeight}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-6"
                            Height="{Binding ElementName=viewVertexStats, Path=ActualHeight}">
                            <Path Data="M12,5.37L11.56,5.31L6,14.9C6.24,15.11 6.4,15.38 6.47,15.68H17.53C17.6,15.38 17.76,15.11 18,14.9L12.44,5.31L12,5.37M6.6,16.53L10.88,19.06C11.17,18.79 11.57,18.63 12,18.63C12.43,18.63 12.83,18.79 13.12,19.06L17.4,16.53H6.6M12,22A1.68,1.68 0 0,1 10.32,20.32L10.41,19.76L6.11,17.21C5.8,17.57 5.35,17.79 4.84,17.79A1.68,1.68 0 0,1 3.16,16.11C3.16,15.32 3.69,14.66 4.42,14.47V9.36C3.59,9.25 2.95,8.54 2.95,7.68A1.68,1.68 0 0,1 4.63,6C5.18,6 5.66,6.26 5.97,6.66L10.38,4.13L10.32,3.68C10.32,2.75 11.07,2 12,2C12.93,2 13.68,2.75 13.68,3.68L13.62,4.13L18.03,6.66C18.34,6.26 18.82,6 19.37,6A1.68,1.68 0 0,1 21.05,7.68C21.05,8.54 20.41,9.25 19.58,9.36V14.47C20.31,14.66 20.84,15.32 20.84,16.11A1.68,1.68 0 0,1 19.16,17.79C18.65,17.79 18.2,17.57 17.89,17.21L13.59,19.76L13.68,20.32A1.68,1.68 0 0,1 12,22M10.8,4.86L6.3,7.44L6.32,7.68C6.32,8.39 5.88,9 5.26,9.25L5.29,14.5L10.8,4.86M13.2,4.86L18.71,14.5L18.74,9.25C18.12,9 17.68,8.39 17.68,7.68L17.7,7.44L13.2,4.86Z" Fill="White" Stretch="Uniform" Margin="6"/>
                        </Grid>
                    </Button>
                    <TextBlock VerticalAlignment="Center" Foreground="RoyalBlue" FontSize="20" FontWeight="DemiBold" Grid.Row="4" TextWrapping="Wrap">View vertex statistics</TextBlock>
                </StackPanel>
                <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button x:Name="exportStats" Click="exportStats_Click"  Height="45"   Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}" Foreground="White" Background="RoyalBlue"
                    HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="5">
                        <Grid Width="{Binding ElementName=viewVertexStats, Path=ActualHeight}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-6"
                            Height="{Binding ElementName=viewVertexStats, Path=ActualHeight}">
                            <Path Data="M20,18H4V8H20M20,6H12L10,4H4C2.89,4 2,4.89 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V8C22,6.89 21.1,6 20,6Z" Fill="White" Stretch="Uniform" Margin="6"/>
                        </Grid>
                    </Button>
                    <TextBlock VerticalAlignment="Center" Foreground="RoyalBlue" FontSize="20" FontWeight="DemiBold" Grid.Row="4" TextWrapping="Wrap">Export statistics to JSON</TextBlock>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
